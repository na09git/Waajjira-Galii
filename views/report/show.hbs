<div class="container" style="padding-top: 135px; padding-bottom: 30px;">
    <div class="row">

        {{!-- Left --}}
        <div class="col-md-8" style="padding-right: 50px; padding-left: 50px;">

            <div class="row">
                <div class="col text-end">
                    <h3>{{report.title}}</h3>
                </div>

                <div class="col">
                    <a href="/report/edit/{{report._id}}" class="btn p-1 btn-float text-primary">
                        <i class="fas fa-edit fa-2x mx-1"></i>
                    </a>
                </div>
            </div>
            <div class="card-content">
                <div style="padding: 7px;">

                    <a href="data:{{report.contentType}};base64,{{report.imageBase64}}"
                        data-gallery="portfolio-gallery-app" class="glightbox img-fluid post-author-img flex-shrink-0">
                        <img src="data:{{report.contentType}};base64,{{report.imageBase64}}" alt="report image"
                            class="img-fluid" style="height: 450px; width: 100%; border-radius:10px;">
                    </a>

                </div>
            </div>


            <div class="p-3 card news">
                <div class="card-content">
                    {{!-- Title --}}
                    <div class="p-2" style="padding-left: 50px;">
                        <span>◇ Title :</span>
                        <span style="padding-left: 40px;">{{report.title}}</span>
                    </div>
                    <hr>

                    {{!-- Title --}}
                    <div class="p-2" style="padding-left: 50px;">
                        <span>◇ News Message :</span>
                        <br>
                        <span style="padding-left: 40px;">{{stripTags report.body}}</span>

                    </div>
                    <hr>
                    {{!-- Broadcasted Date --}}
                    <div class="p-2" style="padding-left: 50px;">
                        <span>◇ Posted Date : </span>
                        <span style="padding-left: 40px;"> {{formatDate report.createdAt 'MMMM Do YYYY, h:mm:ss
                            a'}}</span>
                    </div>

                </div>
            </div>
        </div>


        {{!-- Right --}}
        <div class="col-md-4" style="padding-left: 45px; padding-right: 45px; padding-top: 25px; ">
            <div class="card text-center">
                <div class="card-content">
                    <div style="padding-top: 10px;">
                        <span class="card-title">{{report.user.displayName}}</span>
                    </div>
                    <div style="padding: 7px;">
                        <img src="{{report.user.image}}" class="rounded-circle responsive-img img-small"
                            alt="report poster image" style="height: 150px; width: 150px;">
                    </div>

                    <div class="card-action" style="padding-bottom: 13px;">
                        <button type="button" class="btn  btn-primary link-unstyled text-decoration-none"
                            style="background-color: #3498db; border-color: #3498db; "
                            onmouseover="this.style.backgroundColor='#2980b9'"
                            onmouseout="this.style.backgroundColor='#3498db'"
                            onclick="window.location.href='/report/user/{{report.user._id}}'">
                            More From {{report.user.firstName}}
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>