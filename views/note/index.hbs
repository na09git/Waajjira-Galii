<div>
  <h3 style=" padding-top:25px; padding-bottom:20px; padding-left:230px;">Your Notes</h3>
  <p style=" padding-top:5px; padding-bottom:20px; padding-left:30px;">You can get Your Notes
    here.</p>
</div>
<div class="row" style="padding: 5px; ">
  <div class="col">
    <form id="search-site" action='/note/search/:query' method='get' class="mb-4"
      style="padding-left: 100px; padding-right: 100px;">
      <div class="input-group" style="padding-top: 5px;">
        <span class="input-group-text"><i class="fas fa-search fa-lg"></i></span>
        <div class="form-floating">
          <input id="search" type="search" name='query' class="form-control " placeholder="Search by name">
          <label for="search">Search</label>
        </div>
        <button type="submit" class="btn btn-primary">Search by title</button>
      </div>
    </form>
  </div>

  <div class="row" style="padding-bottom: 30px; padding-left: 30px; padding-right: 30px;">
    {{#each note as |row index| }}
    <div class="col-12 col-md-4">
      <div class="card mb-4">
        <div class="card-img-top">
          <a href="/note/edit/{{row._id}}" class="btn p-2 btn-float  text-success">
            <i class="fas fa-edit fa-lg mx-1"></i>
          </a>
        </div>
        {{!-- Image --}}
        <div class="card ">
          {{#if imageBase64}}
          <img src='data:{{contentType}};base64,{{imageBase64}}' width="auto" height="200" class="note image">
          {{else}}
          <img src="images/no_image.png" width="auto" height="200" class="img-thumbnail">
          {{/if}}
        </div>

        <div class="card-body text-center">
          {{!-- 1 title --}}
          <a href="/note/{{row._id}}">
            <p>{{title}}</p>
          </a>
          {{!-- 2 --}}
          <div class="title" style="padding-bottom: 10px;">
            <p>{{stripTags (truncate body 40)}}</p>
          </div>

        </div>
        <div class="card-footer text-center">
          <a href="/note/{{row._id}}" class="btn btn-secondary">Read More</a>
        </div>
      </div>
    </div>
    {{else}}
    <p class="col-12 text-center">No noteer Information to display!</p>
    {{/each}}
  </div>
</div>



